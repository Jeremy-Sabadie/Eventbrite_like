<h1>Nouvel évènement</h1><br>

<%= form_for @event do |f| %>

  <div class="form-group">

    <label>Nom de l'évènement</label>

    <%= f.text_field :name_event, class: 'form-control' %>

  </div>

  <div class="form-group">

    <label>Lieu</label>

    <%= f.text_field :location, class: 'form-control' %>

  </div>

  <div class="form-group">

    <label>Date</label>

    <%= f.date_field :date, class: 'form-control' %>

  </div>

  <div class="form-group">

    <label>Description de l'évènement</label>

    <%= f.text_field :description, class: 'form-control' %>

  </div>

  <div class="form-group">

    <button type="submit", class: " btn btn-lg btn-primary ">Créer</button>

  </div>

<% end %>

<button type="submit", class: " btn btn-lg btn-primary "><%= link_to "Suggérer à un ami", '#' %></button>

